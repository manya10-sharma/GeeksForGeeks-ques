import java.util.*;
class Solution {
    public int minTime(int[] arr1, int[] arr2) {
        // code here
        int sum1=0;
        int sum2=0;
        for(int i=0; i<arr1.length ; i++){
            if(i%2==0){
                sum1+=arr1[i];
                sum2+=arr2[i];
            }
            else{
                sum1+=arr2[i];
                sum2+=arr1[i];
            }
        }
        return Math.min(sum1,sum2);
    }
}
