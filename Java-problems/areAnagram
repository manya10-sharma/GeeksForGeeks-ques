class Solution {
    static int areAnagram(String s1, String s2) {
        
        if(s1.length() != s2.length()) return 0;
        
        int[] arr = new int[26];
        
        for(char ch : s1.toCharArray()){
            arr[ch-'a']++;
        }
        for(char ch : s2.toCharArray()){
            arr[ch - 'a']--;
        }
        
        for(int i=0 ; i<arr.length ; i++){
            if(arr[i] != 0){
                return 0;
            }
        }
        
        return 1;
    }
}