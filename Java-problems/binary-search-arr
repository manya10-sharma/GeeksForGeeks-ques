class Solution {
    public static int binarySearchArray(int arr[], int k) {
        int n = arr.length;
        int s = 0;
        int e = n-1;
        
        while(s<=e){
            int mid = s+(e-s)/2;
            if(arr[mid]==k){
                return mid;
            }
            else if(arr[mid] < k){
                s = mid+1;
            }
            else{
                e  = mid-1;
            }
        }
        return -1;
    }
}