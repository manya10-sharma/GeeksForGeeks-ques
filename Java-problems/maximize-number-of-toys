class Solution {
    public static int max_toys(int arr[], int k) {
        Arrays.sort(arr);
        int count = 0;
        int sum = 0;
        int n = arr.length;
        for(int i=0 ; i<n ; i++){
            if(sum+arr[i] <=k){
                sum+=arr[i];
                count++;
            }
            else{
                break;
            }
        }
        return count;
    }
}