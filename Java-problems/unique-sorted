
class Solution {
    public static ArrayList<Integer> uniqueSorted(int arr[]) {
        
        ArrayList<Integer> result = new ArrayList<>();
        Arrays.sort(arr);
        result.add(arr[0]);
        for (int i = 1; i < arr.length; i++) {
            if (arr[i] != arr[i - 1]) {
                result.add(arr[i]);
            }
        }
        return result;
    }
}