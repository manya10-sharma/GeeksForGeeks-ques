class Solution {
    public int maxConsecBits(int[] arr) {
        // code here
        int count = 1;
       int maxcount = 1;
        for(int i=1 ; i<arr.length; i++){
            if(arr[i] == arr[i-1]){
                count++;
                maxcount = Integer.max(count,maxcount);
            }else{
                count = 1;
            }
        } 
        return maxcount;
    }
}
