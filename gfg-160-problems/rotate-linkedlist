//Left rotate a linkedlist k times

class Solution {
    public Node rotate(Node head, int k) {
        
        if(head == null || head.next==null || k==0) return head;
        
        Node tail = head;
        int n = 1;
        while(tail.next != null){
            tail = tail.next;
            n++;
        }
        
        k=k%n;
        tail.next = head;

        Node newTail = tail;
        
        for(int i=1 ; i<=k ; i++){
            newTail = newTail.next;
        }
        
        Node newHead = newTail.next;
        newTail.next = null;
        
         
        return newHead;
    }
}