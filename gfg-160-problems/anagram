class Solution {
    public static boolean areAnagrams(String s1, String s2) {

        if(s1.length() != s2.length()) return false;
        
        int[] count = new int[26];
        
        for(char ch : s1.toCharArray()){
            count[ch-'a']++;
        }
        
        for(char ch : s2.toCharArray()){
            count[ch-'a']--;
        }
        
        for(int val : count){
            if(val != 0) return false;
        }
        
        return true;
    }
}