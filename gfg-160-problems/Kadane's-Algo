import java.util.*;
class Solution {
    int maxSubarraySum(int[] arr) {
        int currSum = 0;
        int maxSum = Integer.MIN_VALUE;
        
        for(int i=0 ; i<arr.length ;i++){
            currSum = Math.max(currSum+arr[i],arr[i]);
            maxSum = Math.max(currSum,maxSum);
        }
        return maxSum;
    }
}
