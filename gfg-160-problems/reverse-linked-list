class Node {
    int data;
    Node next;
    Node(int value) {
        this.value = value;
    }
}
class Solution {
    Node reverseList(Node head) {
       Node prev = null;
       Node curr = head;
       Node next = null;
       
       while(curr!=null){
          next = curr.next;
          curr.next = prev;
          prev = curr;
          curr = next;
       }
       return prev;
    }
    
    void printList(Node head){
        Node temp = head;
        while(temp != null){
            System.out.print(temp.data);
            temp=temp.next;
        }
    }
}